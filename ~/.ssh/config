# Default GitHub account
Host github.com
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa

# Work GitHub account
Host github-work
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa_work

# Personal GitLab account
Host gitlab.com
    HostName gitlab.com
    User git
    IdentityFile ~/.ssh/id_rsa_gitlab

# Example for specific repository
Host my-special-repo
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_rsa_special 